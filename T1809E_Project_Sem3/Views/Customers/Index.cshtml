@model IEnumerable<T1809E_Project_Sem3.Models.UserCustomerViewModel>
@using T1809E_Project_Sem3.Models
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared_Admin/_Layout.cshtml";
}

<h2>Index</h2>
<div class="wrapper">
    <div class="row">
        <div class="col-sm-12">
            <section class="panel">
                <header class="panel-heading">
                    Product Table

                </header>
                <div class="panel-body">
                    <div class="btn-group" style="margin-bottom: 1%">
                        <a href="@Url.Action("Create","Customers")" class="btn btn-primary">
                            Create New &nbsp;
                            <i class="fa fa-plus"></i>
                        </a>
                    </div>
                    <div class="adv-table padding row">
                        <table class="display table table-bordered table-striped col-md-11">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.UserName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Address)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Gender)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CreatedAt)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Total_Quantity_Purchased)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Total_Money_Purchased)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Customer_Type)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Status)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Total_Purchased)
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Address)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Gender)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CreatedAt)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Total_Quantity_Purchased)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Total_Money_Purchased)
                                    </td>
                                    <td>
                                        @using (Html.BeginForm("Edit", "Customers", FormMethod.Post))
                                        {
                                            @Html.AntiForgeryToken()
                                            @Html.Hidden("Id", item.Id)
                                            @Html.Hidden("UserName", item.UserName)
                                            @Html.Hidden("Email", item.Email)
                                            @Html.Hidden("Address", item.Address)
                                            @Html.Hidden("Phonenumber", item.Phonenumber)
                                            @Html.Hidden("Gender", item.Gender)
                                            @Html.Hidden("Total_Quantity_Purchased", item.Total_Quantity_Purchased)
                                            @Html.Hidden("Total_Money_Purchased", item.Total_Money_Purchased)
                                            @Html.Hidden("Status", item.Status)
                                            @Html.Hidden("Total_Purchased", item.Total_Purchased)
                                            @Html.DropDownList("Customer_Type", EnumHelper.GetSelectList(typeof(UserCustomerViewModel.EnumCustomer_Type), item.Customer_Type), new { onchange = "this.form.submit()", @class = "btn btn-default" })
                                        }
                                    </td>
                                    <td>
                                        @using (Html.BeginForm("Edit", "Customers", FormMethod.Post))
                                        {
                                            @Html.AntiForgeryToken()
                                            @Html.Hidden("Id", item.Id)
                                            @Html.Hidden("UserName", item.UserName)
                                            @Html.Hidden("Email", item.Email)
                                            @Html.Hidden("Address", item.Address)
                                            @Html.Hidden("Phonenumber", item.Phonenumber)
                                            @Html.Hidden("Gender", item.Gender)
                                            @Html.Hidden("Total_Quantity_Purchased", item.Total_Quantity_Purchased)
                                            @Html.Hidden("Total_Money_Purchased", item.Total_Money_Purchased)
                                            @Html.Hidden("Customer_Type", item.Customer_Type)
                                            @Html.Hidden("Total_Purchased", item.Total_Purchased)
                                            @Html.DropDownList("Status", EnumHelper.GetSelectList(typeof(UserCustomerViewModel.EnumStatus), item.Status), new { onchange = "this.form.submit()", @class = "btn btn-default" })
                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Total_Purchased)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                    </td>
                                </tr>
                            }

                        </table>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>

