@model T1809E_Project_Sem3.Models.RoleViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared_Admin/_Layout.cshtml";
}


    <div class="wrapper">
        <section class="panel">
            <div class="panel-body">
                @using (Html.BeginForm("Edit", "Role", FormMethod.Post, new { @class = "role-form", id = Model.Id, name = Model.Name }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.Id, new { htmlAttributes = new { @class = "form-control" } })
                <div class="form-horizontal">
                    <h4>Edit Role</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <button type="submit" class="btn btn-danger btn-fw">Save</button>
                        </div>
                    </div>
                    <button type="button" class="btn btn-primary">@Html.ActionLink("Back", "Index")</button>
                </div>
                }

            </div>

        </section>
    </div>




