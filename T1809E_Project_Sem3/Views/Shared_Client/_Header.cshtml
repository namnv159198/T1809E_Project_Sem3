                            <ul class="nav navbar-nav">
                                <li style="text-align:center" class="  yamm-fw col-md-3"> <a href="@Url.Action("Index","Client")" data-hover="dropdown" class="dropdown-toggle" >Home</a> </li>
                                

                                <li style="text-align:center" class="dropdown hidden-sm col-md-2"> <a href="@Url.Action("Shop","Client")"> Shop  <span class="menu-label new-menu hidden-xs">new</span> </a> </li>

                                <li style="text-align:center" class="dropdown hidden-sm  col-md-2 "> <a href="@Url.Action("Blog","Client")"> Blog   </a> </li>

                                <li style="text-align:center" class="dropdown hidden-sm  col-md-2"> <a href="@Url.Action("Contact","Client")"> Contact   </a> </li>

                          <li style="text-align:center" class="dropdown hidden-sm  col-md-2"> <a href="@Url.Action("TrackOrder","Client")">Track Oder</a> </li>


                            </ul>
                            <!-- /.navbar-nav -->
                            <div class="clearfix"></div>
                        </div>
                        <!-- /.nav-outer -->
                    </div>
                    <!-- /.navbar-collapse -->

                </div>
                <!-- /.nav-bg-class -->
            </div>
            <!-- /.navbar-default -->
        </div>
        <!-- /.container-class -->

    </div>
    <!-- /.header-nav -->
    <!-- ============================================== NAVBAR : END ============================================== -->

</header>

