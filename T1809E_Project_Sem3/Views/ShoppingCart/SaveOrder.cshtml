@model T1809E_Project_Sem3.Models.Order
@{
    ViewBag.Title = "SaveOrder";
}

@using (Html.BeginForm("Checkout", "ShoppingCart", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="col-md-4 col-sm-12 estimate-ship-tax">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        <span class="estimate-title">Customer Information.</span>
                        <p>Provide your information to help us take care your order.</p>
                    </th>
                </tr>
            </thead><!-- /thead -->
            <tbody>
                <tr>
                    <td>
                        <div class="form-group">
                            <label class="info-title control-label">Customer Name</label>
                            @Html.EditorFor(model => model.CustomerName, new { htmlAttributes = new { @class = "form-control unicase-form-control text-input" } })
                            @Html.ValidationMessageFor(model => model.CustomerName, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label class="info-title control-label">Email</label>
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control unicase-form-control text-input" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label class="info-title control-label">Phone Number</label>
                            @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control unicase-form-control text-input" } })
                            @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label class="info-title control-label">Address</label>
                            @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control unicase-form-control text-input" } })
                            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                        </div>
                        <div class="cart-checkout-btn pull-right">
                            <button type="submit" class="btn btn-primary checkout-btn">PROCCED TO CHEKOUT</button>

                        </div>
                    </td>
                    
                </tr>
            </tbody>
            
        </table>
    </div>
    
    
}

