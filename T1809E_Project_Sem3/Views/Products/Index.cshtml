@model PagedList.IPagedList<T1809E_Project_Sem3.Models.Product>
@using T1809E_Project_Sem3.Models
@using PagedList.Mvc;
    <link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared_Admin/_Layout.cshtml";
    var Iconsort = ViewBag.SortIcon;
    var STT = 0;
}
<style>

    .padding {
        padding-top: 15px;
        padding-bottom: 8px;
    }
</style>
<div class="wrapper">
    <div class="row">
        <div class="col-sm-12">
            <section class="panel">
                <header class="panel-heading">
                   Product Table 
       
                </header>
                <div class="panel-body">
                    <div class="btn-group" style="margin-bottom: 1%">
                        <a href="@Url.Action("Create","Products")" class="btn btn-primary">
                            Create New &nbsp;
                            <i class="fa fa-plus"></i>
                        </a>
                        
                    </div>
                    @using (Html.BeginForm("Index", "Products", FormMethod.Get, new { @name = "search-form" }))
                    {

                        <input type="hidden" name="start" value="" />
                        <input type="hidden" name="end" value="" />
                        <input type="hidden" name="sortOrder" value="" />

                        <div class="row">
                            <div class="col-lg-3 col-md-5">
                                <p class="padding">
                                    Search By Keyword
                                </p>
                                <div class="input-group m-bot15">
                                    <span class="input-group-btn">
                                        <button class="btn btn-default" type="submit" style="height:34px"> Search <i class="fa fa-search"></i></button>

                                    </span>
                                    @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control", @placeholder = "Name. . . " })

                                </div>
                            </div>
                            <div class="col-lg-3 col-md-12">
                                <p class="padding">
                                    Search By Status
                                </p>
                                @Html.DropDownList("status",
                             EnumHelper.GetSelectList(typeof(T1809E_Project_Sem3.Models.Product.ProductStatus)),
                             "Select Status",
                             new { @class = "btn btn-default" })
                            </div>
                            <div class="col-lg-4 col-md-10">
                                <div class="pull-left">
                                    <p class="padding">
                                        Search By Time
                                    </p>
                                    <input type="text" name="daterange" value="" class="form-control fa fa-clock-o" />
                                </div>
                            </div>
                        </div>

                    }


                    @if (Model.Count == 0)
                    {
                        <div style="font-style:italic ; text-align:center ; font-size: 1.2em;" class="padding">
                            (NO RESULT IS FOUND)
                        </div>
                    }
                    <div class="adv-table padding">
                        <table class="display table table-bordered table-striped " id="dynamic-table">
                            <thead>
                                <tr>

                                    <th>
                                        #
                                    </th>
                                    <th>
                                        @Html.ActionLink("Name", "Index", new { sortOrder = ViewBag.NameSort })
                                        <i class="@Iconsort" aria-hidden="true"></i>
                                    </th>


                                    <th>
                                        Category
                                    </th>
                                    <th>
                                        Status
                                    </th>
                                    <th>
                                        Thumbnails
                                    </th>
                                    <th>
                                        @Html.ActionLink("Price", "Index", new { sortOrder = ViewBag.PriceSort })
                                        <i class="@Iconsort" aria-hidden="true"></i>
                                    </th>
                                    <th class="">
                                        @Html.ActionLink("Discount", "Index", new { sortOrder = ViewBag.DiscountSort })
                                        <i class="@Iconsort" aria-hidden="true"></i>
                                    </th>
                                    <th>
                                        @Html.ActionLink("Created At", "Index", new { sortOrder = ViewBag.DateSort })
                                        <i class="@Iconsort" aria-hidden="true"></i>
                                    </th>
                                    <th>
                                        Action
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @{
                                                STT = STT + 1;
                                            }
                                            @STT
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.category.Name)
                                        </td>
                                        <td>
                                            @using (Html.BeginForm("Edit", "Products", FormMethod.Post))
                                            {
                                                @Html.AntiForgeryToken()
                                                @Html.Hidden("Id", item.Id)
                                                @Html.Hidden("Name", item.Name)
                                                @Html.Hidden("Price", item.Price)
                                                @Html.Hidden("CategoryID", item.CategoryID)
                                                @Html.Hidden("Description", item.Description)
                                                @Html.Hidden("Discount", item.Discount)
                                                @Html.Hidden("Thumbnails", item.Thumbnails)
                                                @Html.Hidden("Thumbnails", item.CreateAt)
                                                @Html.Hidden("CreateById", item.CreateById)
                                                @Html.Hidden("UpdateById", item.UpdateById)
                                                @Html.Hidden("DeleteById", item.DeleteById)
                                                @Html.DropDownList("Status", EnumHelper.GetSelectList(typeof(Product.ProductStatus), item.Status), new {onchange = "this.form.submit()", @class = "btn btn-default"})
                                            }
                                        </td>


                                        <td>
                                            <img src="@item.GetDefaultThumbnails()" alt="Thumbnail" class="img-thumbnail" width="100" height="100"/>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Price)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Discount)%
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CreateAt)
                                        </td>
                                        <td>
                                            <div class="btn-group">
                                                <button data-toggle="dropdown" class="btn btn-default dropdown-toggle" type="button" aria-expanded="true"><span class="caret"></span></button>
                                                <ul role="menu" class="dropdown-menu">
                                                    <li><a href="@Url.Action("Edit", "Products", new {id = item.Id})">Edit</a></li>
                                                    <li><a href="@Url.Action("Details", "Products", new {id = item.Id})">Details</a></li>
                                                    <li>
                                                        <a data-toggle="modal" data-target="#myModal_@item.Id">
                                                            Delete
                                                        </a></li>

                                                </ul>
                                            </div>

                                            <div class="modal" id="myModal_@item.Id">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">

                                                        <!-- Modal Header -->
                                                        <div class="modal-header">
                                                            <h4 class="modal-title">Message</h4>

                                                        </div>

                                                        <!-- Modal body -->
                                                        <div class="modal-body">
                                                            <span>Are your sure delete</span> <span class="text-uppercase" style="text-decoration: underline; font-weight: bold">@item.Name </span> ?
                                                        </div>

                                                        <!-- Modal footer -->
                                                        <div class="modal-footer">
                                                            <!-- Cỏntroller -->
                                                            @using (Html.BeginForm("Delete", "Products", new {id = item.Id}))
                                                            {
                                                                @Html.AntiForgeryToken()
                                                                <input type="submit" value="Delete" class="btn btn-default btn-danger"/>
                                                                <input type="button" class=" btn btn-default " data-dismiss="modal" value="Cancel"/>
                                                            }


                                                        </div>

                                                    </div>





                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>




                    <br />
                    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

                
                    @Html.PagedListPager(Model, page => Url.Action("Index",
                        new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter, status = ViewBag.Status }))
         
               

                </div>
            </section>
        </div>




                </div>
        

            </div>

        }
@section scripts{
    <script type="text/javascript">

        $('select[name="status"]').change(function () {
            $('form[name="search-form"]').submit();
        });




    </script>
}
