
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared_Client/_Layout.cshtml";
}

<!-- login-area start -->
<div class="container-fluid">
    <div class="frequently-questions-area white-bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <ol class="breadcrumb">
                        <li><a href="#">Home</a></li>
                        <li class="active">Authentication</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <div class="log-in-area white-bg ptb-70 small-ptb-30">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <h1>Authentication</h1>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <div class="form-single">
                        <form action="#">
                            <h3>Create an account</h3>
                            <p>Please enter your email address to create an account.</p>
                            <label for="email_create">Email Address</label>
                            <input type="email" id="email_create">
                            <button type="submit"><span class="button-inner"> <i class="fa fa-user" aria-hidden="true"></i>Create an account </span></button>
                        </form>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <div class="form-single form-single-right">
                        <form action="#">
                            <h3>Create an account</h3>
                            <label for="email_create-2">Email Address</label>
                            <input type="email" id="email_create-2">
                            <label for="passward">Passward</label>
                            <input type="password" id="passward">
                            <span title="Forgot your password?" class="forgot">Forgot your password?</span>
                            <button type="submit"><span class="button-inner"><i class="fa fa-lock" aria-hidden="true"></i>Sign in </span></button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- login-area end -->
