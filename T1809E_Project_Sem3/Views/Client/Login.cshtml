                        <div class="service-img">
                            <img src="~/ClientTemplate/img/service/icon-headphone.jpeg" alt="icon-headphone">
                        </div>
                        <div class="text">
                            <h3>24/7 customer service</h3>
                            <p>Call us 24/7 at 000 - 123 - 456</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 col-sm-6 col-xs-12 service-border">
                    <div class="single-service">
                        <div class="service-img">
                            <img src="~/ClientTemplate/img/service/rotate.jpeg" alt="rotate">
                        </div>
                        <div class="text">
                            <h3>money back guaratee!</h3>
                            <p>Send within 30 days</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 col-sm-6 col-xs-12">
                    <div class="single-service">
                        <div class="service-img">
                            <img src="~/ClientTemplate/img/service/icon-cog.jpeg" alt="icon-cog">
                        </div>
                        <div class="text">
                            <h3>Shopping Guide</h3>
